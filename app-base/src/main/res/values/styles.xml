<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.AppTheme.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <!--MaterialCardView will use colorControlHighlight if null-->
        <item name="rippleColor">@null</item>
    </style>

    <style name="Widget.AppTheme.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/Widget.AppTheme.MaterialAlertDialog.Content</item>
    </style>

    <style name="Widget.AppTheme.MaterialAlertDialog.Content" parent="MaterialAlertDialog.MaterialComponents">
        <!--24dp and 80dp take too much space on small devices.-->
        <item name="backgroundInsetStart">16dp</item>
        <item name="backgroundInsetTop">16dp</item>
        <item name="backgroundInsetEnd">16dp</item>
        <item name="backgroundInsetBottom">16dp</item>
    </style>

    <style name="Widget.AppTheme.MaterialPopupMenu" parent="Widget.MPM.Menu" />

    <style name="Widget.AppTheme.MarginDivider" parent="">
        <!--We need to specify width and height since this style is used in a include tag-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/keyline_icon</item>
        <item name="android:layout_marginEnd">@dimen/keyline_icon</item>
    </style>

    <style name="Widget.AppTheme.ListHeader" parent="">
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>