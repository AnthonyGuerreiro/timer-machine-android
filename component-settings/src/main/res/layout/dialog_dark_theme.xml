<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <xyz.aprildown.tools.view.ListItemWithLayout
            android:id="@+id/listItemDarkThemeManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:li_layout="@layout/widget_radio"
            app:li_textPrimary="@string/dark_theme_manual" />

        <xyz.aprildown.tools.view.ListItemWithLayout
            android:id="@+id/listItemDarkThemeScheduled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="8dp"
            app:li_layout="@layout/widget_switch"
            app:li_textPrimary="@string/dark_theme_scheduled" />

        <xyz.aprildown.tools.view.ListItemWithLayout
            android:id="@+id/listItemDarkThemeScheduledFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="8dp"
            app:li_layout="@layout/widget_text"
            app:li_textPrimary="@string/dark_theme_scheduled_from" />

        <xyz.aprildown.tools.view.ListItemWithLayout
            android:id="@+id/listItemDarkThemeScheduledTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="8dp"
            app:li_layout="@layout/widget_text"
            app:li_textPrimary="@string/dark_theme_scheduled_to" />

        <include
            layout="@layout/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <xyz.aprildown.tools.view.ListItemWithLayout
            android:id="@+id/listItemDarkThemeDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:li_layout="@layout/widget_radio"
            app:li_textPrimary="@string/dark_theme_system_default" />

        <include
            layout="@layout/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <xyz.aprildown.tools.view.ListItemWithLayout
            android:id="@+id/listItemDarkThemeSaver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:li_layout="@layout/widget_radio"
            app:li_textPrimary="@string/dark_theme_battery_saver" />

    </LinearLayout>

</ScrollView>
